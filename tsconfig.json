{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules"]
}